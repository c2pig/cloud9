{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "ap-southeast-1",
      "source_ami": "ami-10acfb73",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "qa-jmeter {{timestamp}}"
    }],
  "provisioners": [{
      "type": "shell",
      "script": "provision.sh"
  }, {
      "type": "file",
      "source": "scripts",
      "destination": "/home/ubuntu"
  }]
}
